.info-box {
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    opacity: 1;
    border-left-color: rgb(229, 156, 57);
    border-right-color: rgb(229, 156, 57);
    border-top-color: rgb(229, 156, 57);
    border-bottom-color: rgb(229, 156, 57);
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
}

.footer-toolbar-button {
    padding-top: 2px;
    padding-bottom: 0;
    -unity-text-align: middle-center;
    font-size: 24px;
    -unity-font-style: bold;
    padding-right: 40px;
    padding-left: 40px;
}

.header-button {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    margin-right: 0;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    flex-grow: 1;
    margin-left: 0;
    margin-top: 0;
    margin-bottom: 0;
}

.avatar-mini {
    flex-direction: row;
    flex-shrink: 1;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    margin-left: 0;
    margin-right: 0;
    padding-right: 0;
    padding-left: 0;
    padding-top: 0;
    padding-bottom: 0;
    margin-top: 0;
    margin-bottom: 0;
}

.dangerButton {
    background-color: rgb(183, 28, 28);
    color: rgb(255, 255, 255);
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 2px;
    padding-bottom: 2px;
}

.object-field-no-selector .unity-object-field__selector {
    display: none;
}

.x-object {
    margin-left: 0;
    margin-right: 0;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    margin-top: 0;
    margin-bottom: 0;
    flex-grow: 1;
    font-size: 10px;
    -unity-font-style: normal;
}

.x-delete {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    border-left-width: 0;
    background-color: rgba(101, 20, 20, 255);
    color: rgba(255, 255, 255, 255);
    -unity-font-style: bold;
}

.column {
    flex-grow: 0;
    width: 25%;
}

.row {
    flex-grow: 1;
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 2px;
    padding-bottom: 2px;
    margin-left: 4px;
    margin-right: 4px;
    margin-top: 4px;
    margin-bottom: 4px;
    border-left-color: rgb(96, 90, 90);
    border-right-color: rgb(96, 90, 90);
    border-top-color: rgb(96, 90, 90);
    border-bottom-color: rgb(96, 90, 90);
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}
